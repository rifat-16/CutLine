rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    function userRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }

    function isOwner(uid) {
      return userRole(uid) == 'owner';
    }

    function salonOwner(salonId) {
      return get(/databases/$(database)/documents/salons/$(salonId)).data.ownerId;
    }

    function isValidStatus(status) {
      return status in ['pending', 'called', 'served', 'cancelled'];
    }

    match /users/{userId} {
      allow read, create, update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if false;
    }

    match /salons/{salonId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
        && isOwner(request.auth.uid)
        && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }

    match /bookings/{bookingId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        salonOwner(resource.data.salonId) == request.auth.uid
      );

      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid
        && isValidStatus(request.resource.data.status);

      allow update: if isAuthenticated()
        && (
          resource.data.userId == request.auth.uid ||
          salonOwner(resource.data.salonId) == request.auth.uid
        )
        && isValidStatus(request.resource.data.status);

      allow delete: if false;
    }
  }
}
